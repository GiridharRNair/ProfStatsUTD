{
    "name": "profstatsutd",
    "private": true,
    "version": "1.0.4",
    "type": "module",
    "scripts": {
        "install-packages": "npm install && npm run install-go-packages",
        "install-go-packages": "cd api && go mod download",
        "dev": "concurrently \"vite\" \"npm run create-db && npm run start-api\"",
        "create-db": "python db_setup/create_db.py && python db_setup/test_db.py",
        "start-api": "cd api && nodemon --exec go run main.go professor.go sqlite_queries.go --signal SIGTERM",
        "build": "vite build",
        "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
        "format": "prettier --write 'src/**/*.{js,jsx}'",
        "preview": "vite preview"
    },
    "dependencies": {
        "@chakra-ui/icons": "^2.1.1",
        "@chakra-ui/react": "^2.8.2",
        "@choc-ui/chakra-autocomplete": "^5.2.9",
        "@emotion/react": "^11.11.1",
        "@emotion/styled": "^11.11.0",
        "axios": "^1.6.2",
        "chart.js": "^4.4.0",
        "concurrently": "^8.2.2",
        "framer-motion": "^10.16.5",
        "nodemon": "^3.0.2",
        "prettier": "^3.1.1",
        "react": "^18.2.0",
        "react-chartjs-2": "^5.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@crxjs/vite-plugin": "^2.0.0-beta.21",
        "@types/react": "^18.2.37",
        "@types/react-dom": "^18.2.15",
        "@vitejs/plugin-react": "^4.2.0",
        "eslint": "^8.53.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.4",
        "vite": "^5.0.0"
    }
}
