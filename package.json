{
  "name": "profstatsutd",
  "private": true,
  "version": "1.0.3",
  "type": "module",
  "scripts": {
    "install-packages": "npm install && npm run install-api-packages",
    "install-api-packages": "cd api && pip install -r requirements.txt",
    "dev": "concurrently \"vite\" \"npm run start-api\"",
    "start-api": "air -v",
    "build": "concurrently \"vite build\" && \"npm run build-docker && npm run run-docker\"",
    "build-docker": "cd api && docker build -t profstats:latest .",
    "run-docker": "cd api && docker run -p 80:80 profstats:latest",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.2",
    "@choc-ui/chakra-autocomplete": "^5.2.9",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "axios": "^1.6.2",
    "chart.js": "^4.4.0",
    "concurrently": "^8.2.2",
    "framer-motion": "^10.16.5",
    "nodemon": "^3.0.2",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "vite": "^5.0.0"
  }
}
