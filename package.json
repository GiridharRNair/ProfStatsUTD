{
    "name": "profstatsutd",
    "description": "This extension offers a user-friendly interface for accessing aggregated grades and professor ratings effortlessly.",
    "private": true,
    "version": "1.1.3",
    "type": "module",
    "scripts": {
        "install-packages": "npm install && cd api && go mod download",
        "create-db": "python db_setup/create_db.py && python db_setup/test_db.py",
        "test-api": "npm run create-db && cd api && go test -v ./...",
        "api": "npm run create-db && cd api && nodemon --exec go run main.go --signal SIGTERM",
        "vite": "vite",
        "dev": "concurrently \"npm run vite\" \"npm run api\"",
        "build:dev": "vite build --mode development",
        "build": "vite build",
        "lint": "eslint . --fix --ext js,jsx --report-unused-disable-directives --max-warnings 0",
        "lint:check": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "preview": "vite preview"
    },
    "dependencies": {
        "@chakra-ui/icons": "^2.1.1",
        "@chakra-ui/react": "^2.8.2",
        "@choc-ui/chakra-autocomplete": "^5.2.9",
        "@emotion/react": "^11.11.1",
        "@emotion/styled": "^11.11.0",
        "axios": "^1.6.2",
        "chart.js": "^4.4.0",
        "framer-motion": "^10.16.5",
        "react": "^18.2.0",
        "react-chartjs-2": "^5.2.0",
        "react-dom": "^18.2.0",
        "react-icons": "^4.12.0"
    },
    "devDependencies": {
        "@crxjs/vite-plugin": "^2.0.0-beta.21",
        "@types/react": "^18.2.37",
        "@types/react-dom": "^18.2.15",
        "@vitejs/plugin-react": "^4.2.0",
        "concurrently": "^8.2.2",
        "eslint": "^8.53.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.4",
        "nodemon": "^3.0.2",
        "prettier": "^3.1.1",
        "vite": "^5.0.0"
    }
}
